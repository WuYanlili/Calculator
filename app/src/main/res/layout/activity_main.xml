<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wuqia.calculator.MainActivity">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@drawable/write"
        android:editable="false"
        android:gravity="right|bottom"
        android:id="@+id/et_input"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="C"
            android:gravity="right|bottom"
            android:textSize="20sp"
            android:id="@+id/bt_clear"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="DEL"
            android:layout_marginLeft="10dp"
            android:textSize="20sp" android:gravity="right|bottom"
            android:id="@+id/bt_del"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="/"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/bt_eliminate"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="*"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/bt_times"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="7"
            android:gravity="right|bottom"
            android:textSize="20sp"
            android:id="@+id/bt_seven"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="8"
            android:layout_marginLeft="10dp"
            android:textSize="20sp" android:gravity="right|bottom"
            android:id="@+id/bt_eight"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="9"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/bt_nine"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/bt_minus"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="4"
            android:gravity="right|bottom"
            android:textSize="20sp"
            android:id="@+id/bt_four"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:layout_marginLeft="10dp"
            android:textSize="20sp" android:gravity="right|bottom"
            android:id="@+id/bt_five"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="6"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="right|bottom"
            android:id="@+id/bt_six"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+"
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/bt_add"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:gravity="right|bottom"
                    android:textSize="20sp"
                    android:id="@+id/bt_one"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="2"
                    android:gravity="right|bottom"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/bt_two"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="3"
                    android:gravity="right|bottom"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/bt_three"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="0"
                    android:gravity="right|bottom"
                    android:textSize="20sp"
                    android:id="@+id/bt_zero"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="."
                    android:gravity="right|bottom"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/bt_point"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:text="="
            android:gravity="right|bottom"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/bt_equal"/>

    </LinearLayout>



</LinearLayout>




